<%- model_class = Song.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:file_path) %></th>
      <th><%= model_class.human_attribute_name(:cover_file_name) %></th>
      <th><%= model_class.human_attribute_name(:cover_content_type) %></th>
      <th><%= model_class.human_attribute_name(:cover_file_size) %></th>
      <th><%= model_class.human_attribute_name(:cover_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.id, song_path(song) %></td>
        <td><%= song.title %></td>
        <td><%= song.file_path %></td>
        <td><%= song.cover_file_name %></td>
        <td><%= song.cover_content_type %></td>
        <td><%= song.cover_file_size %></td>
        <td><%= song.cover_updated_at %></td>
        <td><%=l song.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_song_path(song), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      song_path(song),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_song_path,
            :class => 'btn btn-primary' %>
