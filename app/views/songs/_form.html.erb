<%= form_for @song, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file_path, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file_path, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cover_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cover_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cover_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cover_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cover_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cover_file_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cover_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :cover_updated_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn' %>
  </div>
<% end %>
